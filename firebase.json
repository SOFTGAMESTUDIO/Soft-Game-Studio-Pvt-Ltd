{
  "hosting": {
    "site": "softgamestudios",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ], "headers": [
      {
        "source": "/sitemap.xml",
        "headers": [
           {
        "key": "Content-Type",
        "value": "application/xml"
      },
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      },
      {
        "source": "/robots.txt",
        "headers": [
           {
        "key": "Content-Type",
        "value": "text/plain"
      },
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ],
    "predeploy": ["npm run build"]
   
  }
}
